<section class="contact">
	<article>
		<h1>Contact Me</h1>
		<form role="form" name="contactForm" ng-submit="formSubmit(contactForm)">
			<div class="form-group">
				<input class="form-control" ng-model="name" name="name" id="name" type="text" placeholder="Name" required/>
			</div>
			<div class="form-group">
				<input class="form-control" ng-model="email" name="email" id="email" type="email" placeholder="Email Address" required/>
			</div>
			<div class="form-group">
				<textarea class="form-control" ng-model="message" name="message" id="message" rows="5" required></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg">Send Message</button>
		 		<a class="btn btn-link btn-lg" href='mailto:nateholland@sbcglobal.net'>Or email me</a>
			</div>
		</form>
	</article>
</section>